class Solution {
public:
    int romanToInt(string s) {
        int ans=0;
        map<string,int>mp={{"IV",4},{"IX",9},{"XL",40},{"XC",90},{"CD",400},{"CM",900}};
        map<string,int>m={{"I",1},{"V",5},{"X",10},{"L",50},{"C",100},{"D",500},{"M",1000}};
        for(int i=0;i<s.size();i++){
            if(i!=s.size()-1){
                string st;
                st.push_back(s[i]);
                st.push_back(s[i+1]);
                if(mp.find(st)!=mp.end()){
                    ans+=mp[st];
                    i++;
                }
                else{
                    string str;
                    str.push_back(s[i]);
                    ans+=m[str];
                }
            }
            else{
                string st;
                st.push_back(s[i]);
                int b=m[st];
                ans+=b;
            }
        }
        return ans;
    }
};