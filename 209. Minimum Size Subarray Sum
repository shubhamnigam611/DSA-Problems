class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int i=0,sum=0,len=0,ans=INT_MAX,s=0;
        while(i<nums.size()){
            sum+=nums[i];
            len++;
            while(sum>target){
                if(sum>=target&&len){
                    ans=min(ans,len);
                }
                sum-=nums[s];
                s++;
                len--;
                if(sum>=target&&len){
                    ans=min(ans,len);
                }
            }
            if(sum>=target){
                ans=min(ans,len);
            }
            i++;
        }
        if(ans==INT_MAX)return 0;
        return ans;
    }
};