class Solution {
public:
    vector<vector<string>> groupAnagrams(vector<string>& strs) {
        vector<vector<string>> ans;
        map<string,vector<int>>mp;
        for(int i=0;i<strs.size();i++){
            string s=strs[i];
            sort(s.begin(),s.end());
            mp[s].push_back(i);
        }
        for(auto i:mp){
            vector<string>v;
            for(auto j:i.second){
                v.push_back(strs[j]);
            }
            ans.push_back(v);
        }
        return ans;
    }
};