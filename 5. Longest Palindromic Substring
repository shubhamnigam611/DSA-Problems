class Solution {
public:
    string longestPalindrome(string s) {
        string ans="";
        int start=0;
        int maxLen=0;
        for(int i=0;i<s.size();i++){
            int l=0,r=0;
            //for odd
            l=i,r=i;
            while(l>=0&&r<s.size()&&s[l]==s[r]){
                if(r-l+1>maxLen){
                    maxLen=r-l+1;
                    start=l;
                }
                l--;
                r++;
            }
            //for even
            l=i,r=i+1;
            while(l>=0&&r<s.size()&&s[l]==s[r]){
                if(r-l+1>maxLen){
                    maxLen=r-l+1;
                    start=l;
                }
                l--;
                r++;
            }
        }
        for(int i=start;i<start+maxLen;i++){
            ans+=s[i];
        }
        return ans;
    }
};